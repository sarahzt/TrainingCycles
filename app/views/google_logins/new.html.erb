<% # google_logins / new view file (in modal) %>

<script type="text/javascript">
    $(document).ready(function () {
        $('#myModal').modal('show');
    });
</script>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Log in with Google</h4>
      </div>
      <div class="modal-body">
      	<p>In order to create and access your new race training calendar, Training Cycles needs access to your Google account. By providing this authorization, Training Cycles will be able to view your email address and create a new Google Calendar for your account.</p>
      	<p>Please click the link below to authenticate with Google.</p>
		<p>
      </div>
      <div class="modal-footer">
        <!-- <button type="button" class="btn btn-default" data-dismiss="modal">Close</button> -->
        <%= button_to "Log in with Google", '/auth/google_oauth2', {method: :get ,class: "btn btn-primary"}  %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->