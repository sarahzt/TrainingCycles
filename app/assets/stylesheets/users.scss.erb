}

div.flash-msgs {
	margin-top:-10px;
	text-shadow: none; 
	text-align: left;
}

div.site-wrapper {
	background-image: url(<%= asset_path 'bg_running_3.jpg' %>);
	background-position: center bottom;
	background-repeat: no-repeat;
